<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- FORCE LIGHT MODE: Theme applied to the Android Window while the process is starting -->
    <!-- Enhanced for Huawei and other Android devices -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity. Automatically removed when
             the Flutter engine draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Force light status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Force light navigation bar -->
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Set status bar color to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Set navigation bar color to white -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
    <!-- FORCE LIGHT MODE: Theme applied to the Android Window as soon as the process has started -->
    <!-- This theme determines the color of the Android Window while your Flutter UI initializes -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Force light status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Force light navigation bar -->
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Set status bar color to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Set navigation bar color to white -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
</resources>